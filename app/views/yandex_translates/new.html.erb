<h1>Yandex Translate</h1>
<%= form_for :yandex_translates, url: yandex_translates_path do |f| %>  
  <p>
    <%= f.label :Translation_direction %><br>
    <select name="lang">
      <% @yandex_langs['dirs'].each do |translation_direction| %>
          <option value="<%= translation_direction %>"><%= translation_direction %></option>
      <% end %>
    </select>    
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit :Translate %>
  </p>
<% end %>

